{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/webview/components/*"],
      "@services/*": ["src/services/*"],
      "@consumers/*": ["src/consumers/*"],
      "@lib/*": ["src/lib/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/consumers/**/*", "src/services/**/*", "src/webview/**/*"],
  "exclude": ["node_modules", ".vscode-test", "vite.config.ts", "tailwind.config.js", "postcss.config.js"]
}
