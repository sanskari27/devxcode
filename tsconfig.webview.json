{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/webview/components/*"],
      "@services/*": ["src/services/*"],
      "@consumers/*": ["src/consumers/*"],
      "@lib/*": ["src/lib/*"],
      "@src/*": ["src/*"],
    }
  },
  "include": ["src/webview/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
